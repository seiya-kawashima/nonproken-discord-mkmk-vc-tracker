{
  "attendance_report": {
    "header_with_greeting_and_intro": {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "## 📅 {date} の参加レポート\n{greeting_message}\n:sparkles: {intro_message}"
      }
    },
    "divider": {
      "type": "divider"
    },
    "table_header": {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*参加者*"
        },
        {
          "type": "mrkdwn",
          "text": "*合計 / 連続*"
        }
      ]
    },
    "participant_row": {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "{user_display}"
        },
        {
          "type": "mrkdwn",
          "text": "{total_days}日目 / {consecutive_days}日連続"
        }
      ]
    },
    "table_footer_divider": {
      "type": "divider"
    },
    "no_participants": {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "{no_participants_message}"
      }
    },
    "summary": {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "{summary_message}"
      }
    }
  },
  "fallback_messages": {
    "greeting": "もくもく、おつかれさまでした！ :stmp_fight:",
    "intro": "本日の参加者は{count}名です。",
    "no_participants": "本日のVCログイン者はいませんでした。",
    "summary": ""
  }
}