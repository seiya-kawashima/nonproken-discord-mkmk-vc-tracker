{
  "attendance_report": {
    "title_header": {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "📅 {date} の参加レポート",
        "emoji": true
      }
    },
    "greeting_and_intro": {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "{greeting_message}\n:sparkles: {intro_message}"
      }
    },
    "divider": {
      "type": "divider"
    },
    "table_header": {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*参加者*"
        },
        {
          "type": "mrkdwn",
          "text": "*合計 / 連続*"
        }
      ]
    },
    "participant_row": {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "{user_display}"
        },
        {
          "type": "mrkdwn",
          "text": "{total_days}日目 / {consecutive_days}日連続"
        }
      ]
    },
    "table_footer_divider": {
      "type": "divider"
    },
    "no_participants": {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "{no_participants_message}"
      }
    },
    "summary": {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "{summary_message}"
      }
    }
  },
  "fallback_messages": {
    "greeting": "皆さん、もくもく、おつかれさまでした！ :stmp_fight:",
    "intro": "本日の参加者は{count}名です。",
    "user_format_first": "{user} さん　合計{total}日目のログイン",
    "user_format_streak": "{user} さん　合計{total}日目のログイン（{streak}日連続ログイン）",
    "no_participants": "本日のVCログイン者はいませんでした。",
    "summary": "",
    "message_order": ["greeting", "intro", "summary", "users"]
  }
}