GOOGLE_SERVICE_ACCOUNT_JSON_1_TST=C:\Users\foo\PASTE_HERE.json # サービスアカウントのJSONファイルパス
GOOGLE_SHARED_DRIVE_ID_1_TST=PASTE_HERE # Google Drive共有ドライブID（オプション、未設定時はマイドライブ）
SLACK_BOT_TOKEN_1_TST=PASTE_HERE # Slack Bot User OAuth Token (xoxb-で始まる)
SLACK_CHANNEL_ID_1_TST=PASTE_HERE # 通知先のSlackチャンネルID
DISCORD_VOICE_CHANNEL_IDS_1_TST=PASTE_HERE # 監視対象のVCチャンネルID（カンマ区切りで複数指定可能）

# ====================
# 開発環境設定（2_DEV）
# ====================
DISCORD_BOT_TOKEN_2_DEV=PASTE_HERE # Discord Developer Portal で取得したBotトークン
